{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++.exe 生成活动文件",
			"command": "D:/Xu/softwares/mingw64/bin/g++.exe",
			"args": [
				"-fdiagnostics-color=always",
				"-g", "${workspaceFolder}\\*.cpp",
				"-g", "${workspaceFolder}\\src\\*.cpp",
				"-I", "${workspaceFolder}\\include",
				"-o", "${workspaceFolder}\\${workspaceFolderBasename}.exe"
			],
			"options": {
				"cwd": "D:/Xu/softwares/mingw64/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "编译器: D:/Xu/softwares/mingw64/bin/g++.exe"
		}
	]
}